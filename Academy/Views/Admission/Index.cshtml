@model IEnumerable<Admissions>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Admissions</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
            </div>
        </div>
    </div>
</div>


<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="index.html">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Admission</span>
    </div>
</div>

<div class="site-section">
    <div class="container">
        @foreach (Admissions admissions in Model.Take(2))
        {
            <div class="row mb-5">
                <div class="col-lg-6 mb-lg-0 mb-4">
                    <img src="images/admissions/@admissions.Image" alt="Image" class="img-fluid">
                </div>
                <div class="col-lg-5 ml-auto align-self-center">
                    <h2 class="section-title-underline mb-5">
                        <span>@admissions.Title</span>
                    </h2>
                    <p>@admissions.Description</p>
                    <ol class="ul-check primary list-unstyled">
                        <li>@admissions.Form</li>
                        <li>@admissions.Card</li>
                        <li>@admissions.Transcript</li>
                        <li>@admissions.Certificate</li>
                        <li>@admissions.Picture</li>
                    </ol>
                </div>
            </div>
        }
    </div>
</div>

@await Component.InvokeAsync("Detail")

