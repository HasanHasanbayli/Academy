@model Apply
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end justify-content-center text-center">
            <div class="col-lg-7">
                <h2 class="mb-0">Apply</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
            </div>
        </div>
    </div>
</div>
<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="index.html">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Apply</span>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="site-section">
            <div class="container">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="FirstName" for="fname">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control form-control-lg lorem">

                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="LastName" for="lname">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control lorem form-control-lg">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="EmailAddress" for="eaddress">Email Address</label>
                            <input asp-for="EmailAddress"  class="form-control lorem form-control-lg">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="TelNumber" for="tel">Tel. Number</label>
                            <input asp-for="TelNumber"class="form-control lorem form-control-lg">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Message" for="message">Message</label>
                            <textarea asp-for="Message"cols="30" rows="10" class="form-control lorem"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Send Message" class="btn btn-primary btn-lg px-5">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>