@await Component.InvokeAsync("Detail")

<div class="news-updates">
    <div class="container">

        <div class="row">
            @if (Model.News.Count() > 0)
            {
                <div class="col-lg-9">
                    <div class="section-heading">
                        <h2 class="text-black">News &amp; Updates</h2>
                        <a asp-controller="AllNews" asp-action="Index">Read All News</a>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="post-entry-big">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@Model.News.Last().Id" class="img-link">
                                    <img src="~/images/news/@Model.News.Last().Image" alt="Image" class="img-fluid">
                                </a>
                                <div class="post-content">
                                    <div class="post-meta">
                                        <a href="#">@Model.News.Last().Date</a>
                                        <span class="mx-1">/</span>
                                        <a href="#">Admission</a>, <a href="#">Updates</a>
                                    </div>
                                    <h3 class="post-heading"><a href="news-single.html">@Model.News.Last().Title</a></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            @foreach (News news in Model.News.OrderByDescending(m => m.Id).Take(3))
                            {
                                <div class="post-entry-big horizontal d-flex mb-4">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@news.Id" class="img-link mr-4">
                                        <img src="~/images/news/@news.Image" alt="Image"
                                             class="img-fluid">
                                    </a>
                                    <div class="post-content">
                                        <div class="post-meta">
                                            <a href="#">@news.Date</a>
                                            <span class="mx-1">/</span>
                                            <a href="#">Admission</a>, <a href="#">Updates</a>
                                        </div>
                                        <h3 class="post-heading"><a href="news-single.html">@news.Title</a></h3>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            @if (Model.Videos.Count() > 0)
            {
                <div class="col-lg-3">
                    <div class="section-heading">
                        <h2 class="text-black">Campus Videos</h2>
                        <a asp-controller="AllVideos" asp-action="Index">View All Videos</a>
                    </div>
                    @foreach (Videos videos in Model.Videos.OrderByDescending(m => m.Id).Take(2))
                    {
                        <a href="~/@videos.Video" class="video-1 mb-4" data-fancybox="" data-ratio="2">
                            <span class="play">
                                <span class="icon-play"></span>
                            </span>
                            <img src="~/images/videos/@videos.Image" alt="Image" class="img-fluid">
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="site-section ftco-subscribe-1" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2>Subscribe to us!</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia,</p>
            </div>
            <div class="col-lg-5">
