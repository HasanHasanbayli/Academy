@model List<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <a asp-controller="Users" asp-action="Create" class="btn btn-success mt-3">Create New User</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    IsActivated
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                            <tr>
                                <td>
                                    @user.FullName
                                </td>
                                <td>
                                    @user.UserName
                                </td>
                                <th>
                                    @user.Email
                                </th>
                                <td>
                                    @user.Role
                                </td>
                                @if (user.IsActivated)
                                {
                                    <td style="color:lawngreen">
                                        Active
                                    </td>
                                }
                                else
                                {
                                    <td style="color:red">
                                        Disable
                                    </td>
                                }
                                <td>
                                    @if (user.IsActivated)
                                    {
                                        <a asp-action="Active" asp-route-id="@user.Id" class="btn btn-danger">Disable</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Disable" asp-route-id="@user.Id" class="btn btn-success">Active</a>
                                    }
                                    <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
