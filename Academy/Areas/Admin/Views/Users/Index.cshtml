@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                @*<a asp-controller="Users" asp-action="Create" class="btn btn-success mt-3">Create New User</a>*@
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    IsActivated
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                                <tr>
                                    <td>
                                        @user.FullName
                                    </td>
                                    <td>
                                        @user.UserName
                                    </td>
                                    <th>
                                        @user.Email
                                    </th>
                                    <td>
                                        @user.Role
                                    </td>
                                    @if (user.IsActivated)
                                    {
                                        <td style="color:lawngreen">
                                            Active
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="color:red">
                                            Disable
                                        </td>
                                    }
                                <td>
                                    @if (user.IsActivated)
                                    {
                                        <a asp-action="Active" asp-route-id="@user.Id" class="btn btn-danger"><i class="mdi mdi-account-minus"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="Disable" asp-route-id="@user.Id" class="btn btn-success"><i class="mdi mdi-account-plus"></i></a>
                                    }
                                    <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-convert"></i>
                                    </a>
                                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-primary">
                                        <i class="mdi mdi-account-key"></i> 
                                    </a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">
                                        <i class="mdi mdi-account-remove"></i>
                                    </a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
