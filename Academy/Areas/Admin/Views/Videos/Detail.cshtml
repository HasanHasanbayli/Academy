@model Videos
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <img src="~/images/videos/@Model.Image" width="700px" height="500px" />
</div>
<div>
    <h3 class="mt-3">Video Link</h3>
    @Model.Video
</div>
<div class="row mt-3">
    <form method="post">
        <a class="btn btn-light" asp-action="Index">Go Back</a>
    </form>
</div>