@model Testimonials
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <img src="~/images/testimonials/@Model.Image" width="400px" height="400px" />
</div>
<div>
    <h3 class="mt-3">Full Name</h3>
    @Model.FullName
</div>
<div>
    <h3 class="mt-3">Position</h3>
    @Model.Position
</div>
<div>
    <h3 class="mt-3">Description</h3>
    @Model.Description
</div>
<div class="row mt-3">
    <form method="post">
        <input type="submit" class="btn btn-danger ml-3"<i class="mdi mdi-delete"></i></input>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>