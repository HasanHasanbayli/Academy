@model Testimonials
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <img src="~/images/testimonials/@Model.Image" width="400px" height="400px"/>
</div>
<div>
    <h3 class="mt-3">Full Name</h3>
    @Model.FullName
</div>
<div>
    <h3 class="mt-3">Position</h3>
    @Model.Position
</div>
<div>
    <h3 class="mt-3">Description</h3>
    @Model.Description
</div>
<div class="row mt-3">
    <a class="btn btn-dark" asp-action="Index">Go Back</a>
</div>