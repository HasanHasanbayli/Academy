@model Bio
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                    <a asp-controller="Bio" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-success mt-3">Create Bio</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Call
                                </th>
                                <th>
                                    Mail
                                </th>
                                <th>
                                    About
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Linkedin
                                </th>
                                <th>
                                    HeaderLogo
                                </th>
                                <th>
                                    FooterLogo
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Model.Call
                                </td>
                                <td>
                                    @Model.Email
                                </td>
                                <td>
                                    @Model.About
                                </td>
                                <td>
                                    @Model.Facebook
                                </td>
                                <td>
                                    @Model.Twitter
                                </td>
                                <td>
                                    @Model.Linkedin
                                </td>
                                <td>
                                    <img src="~/images/logo/@Model.HeaderLogo" style="width:100px;height:50px; border-radius:0px " />
                                </td>
                                <td>
                                    <img src="~/images/logo/@Model.FooterLogo" style="width:100px;height:50px; border-radius:0px " />
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>