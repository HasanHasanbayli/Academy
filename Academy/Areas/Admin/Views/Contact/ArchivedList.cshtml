@model IEnumerable<Contact>
@{
    ViewData["Title"] = "ArchivedList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Apply</h4>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-success mt-3">Index</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Email Adress
                                </th>
                                <th>
                                    Tel Number
                                </th>
                                <th>
                                    Message
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Contact contact in Model)
                            {
                                <tr>
                                    <td>
                                        @contact.FirstName
                                    </td>
                                    <td>
                                        @contact.LastName
                                    </td>
                                    <td>
                                        @contact.EmailAddress
                                    </td>
                                    <td>
                                        @contact.TelNumber
                                    </td>
                                    <td>
                                        <textarea style="width:400px; height:50px; border:none; background-color:azure"> @contact.Message</textarea>
                                    </td>
                                    <td>
                                        <a asp-action="Restore" asp-route-id="@contact.Id" class="btn btn-primary">
                                            <i class="mdi mdi-cloud-sync"></i>
                                            Restore
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
