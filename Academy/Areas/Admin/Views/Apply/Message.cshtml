@model Apply
@{
    ViewData["Title"] = "Message";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6" style="background-color:tan">
        <div>
            <h3 class="mt-3">Full Name</h3>
            @Model.FirstName
        </div>
        <div>
            <textarea class="mt-3" style="width:400px; height:300px"> @Model.Message</textarea>
        </div>
    </div>
</div>

<div class="row mt-3">
    <a class="btn btn-dark" asp-action="Index">Go Back</a>
</div>