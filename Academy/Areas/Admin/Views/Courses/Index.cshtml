@model IEnumerable<Courses>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-success mt-3">Create New Course</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    AboutCourse
                                </th>
                                <th>
                                    SkillLevel
                                </th>
                                <th>
                                    StudentsCount
                                </th>
                                <th>
                                    Teacher
                                </th>
                                <th>
                                    Certification
                                </th>
                                <th>
                                    Star
                                </th>
                                <th>
                                    StartTime
                                </th>
                                <th>
                                    EndTime
                                </th>
                                <th>
                                    Duration
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Courses courses in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/images/courses/@courses.Image" style="width:100px;height:100px;" />
                                </td>
                                <td>
                                    @courses.Name
                                </td>
                                <td>
                                    @courses.Title
                                </td>
                                <td>
                                    @courses.Description
                                </td>
                                <td>
                                    @courses.Price
                                </td>
                                <td>
                                    @courses.AboutCourse
                                </td>
                                <td>
                                    @courses.SkillLevel
                                </td>
                                <td>
                                    @courses.StudentsCount
                                </td>
                                <td>
                                    @courses.Teacher.FullName
                                </td>
                                <td>
                                    @courses.Certification
                                </td>
                                <td>
                                    @courses.Star
                                </td>
                                <td>
                                    @courses.StartTime
                                </td>
                                <td>
                                    @courses.EndTime
                                </td>
                                <td>
                                    @courses.Duration
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@courses.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@courses.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@courses.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>