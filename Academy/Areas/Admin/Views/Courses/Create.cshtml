@model Courses
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Courses</h4>
            <form class="forms-sample" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo" accept="image/*" placeholder="Input Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" placeholder="Input Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Input Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Input Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Input Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AboutCourse"></label>
                    <input asp-for="AboutCourse" class="form-control" placeholder="Input AboutCourse">
                    <span asp-validation-for="AboutCourse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkillLevel"></label>
                    <input asp-for="SkillLevel" class="form-control" placeholder="Input SkillLevel">
                    <span asp-validation-for="SkillLevel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentsCount"></label>
                    <input asp-for="StudentsCount" class="form-control" placeholder="Input StudentsCount">
                    <span asp-validation-for="StudentsCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Certification"></label>
                    <input asp-for="Certification" class="form-control" placeholder="Input Certification">
                    <span asp-validation-for="Certification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Star"></label>
                    <input asp-for="Star" min="1" max="5" class="form-control" placeholder="Input Star">
                    <span asp-validation-for="Star" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime"></label>
                    <input asp-for="StartTime" class="form-control" placeholder="Input Description">
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime"></label>
                    <input asp-for="EndTime" class="form-control" placeholder="Input EndTime">
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control" placeholder="Input Duration">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Teachers Name</label>
                    <select asp-for="TeacherId">
                        @foreach (var item in ViewBag.Teachers)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>