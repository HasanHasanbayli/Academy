@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <a asp-controller="Teachers" asp-action="Create" class="btn btn-success mt-3">Create New Teacher</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    About
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Teacher teacher in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/images/teachers/@teacher.Image" style="width:100px;height:100px;" />
                                </td>
                                <td>
                                    @teacher.FullName
                                </td>
                                <td>
                                    @teacher.Position
                                </td>
                                <td>
                                    @teacher.About
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@teacher.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>