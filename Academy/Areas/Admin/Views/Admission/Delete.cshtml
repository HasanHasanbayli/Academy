@model Admissions
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <img src="~/images/admissions/@Model.Image" width="400px" height="400px"/>
</div>
<div class="mt-3">
    @Model.Title
</div>
<div class="mt-3">
    @Model.Description
</div>
<div class="mt-3">
    @Model.Form
</div>
<div class="mt-3">
    @Model.Card
</div>
<div class="mt-3">
    @Model.Description
</div>
<div class="mt-3">
    @Model.Transcript
</div>
<div class="mt-3">
    @Model.Picture
</div>
<div class="mt-3">
    @Model.Certificate
</div>
<div class="row mt-3">
    <form method="post">
        <input type="submit" class="btn btn-danger ml-3"<i class="mdi mdi-delete"></i></input>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>