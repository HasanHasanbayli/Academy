@model IEnumerable<Admissions>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                @if (Model.Count() < 2)
                {
                    <a asp-controller="Admission" asp-action="Create" class="btn btn-success mt-3">Create New Admission</a>
                }
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Form
                                </th>
                                <th>
                                    Card
                                </th>
                                <th>
                                    Transcript
                                </th>
                                <th>
                                    Certificate
                                </th>
                                <th>
                                    Picture
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Admissions admissions in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/admissions/@admissions.Image" style="width:100px;height:100px;" />
                                    </td>
                                    <td>
                                        @admissions.Title
                                    </td>
                                    <td>
                                        @admissions.Description
                                    </td>
                                    <td>
                                        @admissions.Form
                                    </td>
                                    <td>
                                        @admissions.Card
                                    </td>
                                    <td>
                                        @admissions.Transcript
                                    </td>
                                    <td>
                                        @admissions.Certificate
                                    </td>
                                    <td>
                                        @admissions.Picture
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@admissions.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@admissions.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@admissions.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>